---
import { Phone, Mail, CheckCircle } from 'lucide-react';
---

<section class="relative py-32 overflow-hidden">
  <div class="absolute inset-0">
    <Image
      src={ctaBgImg}
      alt="Beautiful landscaped property"
      class="w-full h-full object-cover"
      width={2070}
      height={1380}
    />
    <div class="absolute inset-0 bg-gradient-to-r from-green-900/95 to-green-800/90"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="max-w-4xl mx-auto text-center text-white">
      <div class="inline-block px-4 py-2 mb-6 bg-white/10 backdrop-blur-sm text-white text-sm font-semibold rounded-full">
        Get Started Today
      </div>
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
        Ready to Transform Your <span class="text-transparent bg-clip-text bg-gradient-to-r from-green-300 to-emerald-300">Outdoor Space?</span>
      </h2>
      <p class="text-xl md:text-2xl text-slate-200 mb-12 max-w-2xl mx-auto leading-relaxed">
        Get a free, no-obligation quote today. Let us help you create the perfect outdoor space for your home or business.
      </p>

      <div class="flex flex-col sm:flex-row gap-6 justify-center mb-16">
        <a
          href="/rfq"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-green-900 bg-white hover:bg-slate-100 rounded-lg shadow-2xl hover:shadow-3xl transition-all group hover-lift"
        >
          Get Free Quote
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a
          href="tel:(905) 351-9975"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white border-2 border-white hover:bg-white/10 rounded-lg shadow-2xl hover:shadow-3xl transition-all group hover-lift"
        >
          <Phone className="w-5 h-5 mr-2" />
          (905) 351-9975
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-3xl mx-auto mb-12">
        <div class="backdrop-blur-sm bg-white/10 rounded-xl p-6 hover:bg-white/20 transition-all border border-white/10 hover:border-white/30">
          <CheckCircle className="w-10 h-10 text-green-300 mx-auto mb-3" />
          <div class="text-lg font-semibold mb-1">Free Estimates</div>
          <div class="text-sm text-slate-300">No obligation quotes</div>
        </div>
        <div class="backdrop-blur-sm bg-white/10 rounded-xl p-6 hover:bg-white/20 transition-all border border-white/10 hover:border-white/30">
          <CheckCircle className="w-10 h-10 text-green-300 mx-auto mb-3" />
          <div class="text-lg font-semibold mb-1">Licensed & Insured</div>
          <div class="text-sm text-slate-300">Fully certified team</div>
        </div>
        <div class="backdrop-blur-sm bg-white/10 rounded-xl p-6 hover:bg-white/20 transition-all border border-white/10 hover:border-white/30">
          <CheckCircle className="w-10 h-10 text-green-300 mx-auto mb-3" />
          <div class="text-lg font-semibold mb-1">Satisfaction Guaranteed</div>
          <div class="text-sm text-slate-300">Quality workmanship</div>
        </div>
      </div>

      <div class="max-w-2xl mx-auto">
        <p class="text-slate-200 mb-4">Serving Niagara Region & Greater Toronto Area</p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 text-sm">
          <a href="tel:(905) 351-9975" class="flex items-center gap-2 text-white hover:text-green-300 transition-colors">
            <Phone className="w-4 h-4" />
            (905) 351-9975
          </a>
          <span class="hidden sm:block text-green-300">|</span>
          <a href="mailto:info@reliablelandscapingniagara.com" class="flex items-center gap-2 text-white hover:text-green-300 transition-colors">
            <Mail className="w-4 h-4" />
            info@reliablelandscapingniagara.com
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

