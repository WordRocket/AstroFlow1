---
import Button from '../ui/Button.astro';
import { Phone, Star } from 'lucide-react';
---

<section class="relative h-screen min-h-[700px] flex items-center overflow-hidden">
  <div class="absolute inset-0">
    <Image
      src={heroBgImg}
      alt="Beautiful landscaped lawn and property"
      class="w-full h-full object-cover"
      width={2070}
      height={1380}
      decoding="async"
      fetchpriority="high"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-slate-900/90 via-slate-900/75 to-green-900/60"></div>
  </div>

  <div class="container mx-auto relative z-10 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl">
      <div class="inline-flex items-center px-4 py-2 mb-6 bg-gradient-to-r from-green-600 to-green-700 text-white text-sm font-semibold rounded-full shadow-lg animate-fadeInUp">
        <Star className="w-4 h-4 mr-2 fill-current" />
        5.0 Rating - Trusted by Niagara Homeowners
      </div>

      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight animate-fadeInUp" style="animation-delay: 0.1s;">
        Transform Your Outdoor Space with
        <span class="block text-transparent bg-clip-text bg-gradient-to-r from-green-400 via-emerald-300 to-green-400 mt-2">
          Expert Landscaping
        </span>
      </h1>

      <p class="text-xl md:text-2xl text-slate-200 mb-8 max-w-2xl leading-relaxed animate-fadeInUp" style="animation-delay: 0.2s;">
        Professional landscaping, hardscaping, tree removal, and snow removal services in Niagara and GTA.
        Year-round care for beautiful, healthy outdoor spaces.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 mb-12 animate-fadeInUp" style="animation-delay: 0.3s;">
        <Button href="/rfq" size="lg" class="bg-green-600! hover:bg-green-700! text-white! shadow-2xl! hover-lift">
          Get Free Quote
        </Button>
        <Button href="tel:(905) 351-9975" size="lg" variant="outline" class="border-2! border-white! text-white! hover:bg-white/10! shadow-2xl! hover-lift">
          <Phone className="w-5 h-5 mr-2" />
          (905) 351-9975
        </Button>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 pt-8 border-t border-white/20 animate-fadeInUp" style="animation-delay: 0.4s;">
        <div class="group">
          <div class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-white to-green-200 mb-1">5.0</div>
          <div class="text-sm text-slate-300 group-hover:text-green-300 transition-colors">Star Rating</div>
        </div>
        <div class="group">
          <div class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-white to-green-200 mb-1">100+</div>
          <div class="text-sm text-slate-300 group-hover:text-green-300 transition-colors">Projects Done</div>
        </div>
        <div class="group">
          <div class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-white to-green-200 mb-1">10+</div>
          <div class="text-sm text-slate-300 group-hover:text-green-300 transition-colors">Years Experience</div>
        </div>
        <div class="group">
          <div class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-white to-green-200 mb-1">24/7</div>
          <div class="text-sm text-slate-300 group-hover:text-green-300 transition-colors">Emergency Service</div>
        </div>
      </div>
    </div>
  </div>

  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>

