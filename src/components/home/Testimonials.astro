---
import { Star, Quote } from 'lucide-react';
import { Image } from 'astro:assets';

import testimonial1Img from '@assets/5132814676904369851.jpg';
import testimonial2Img from '@assets/3937649282110461008.jpg';
import testimonial3Img from '@assets/1783369057941886937.jpg';

const testimonials = [
  {
    quote: "Reliable Landscaping transformed our property! Their attention to detail and professional service is outstanding. Our lawn has never looked better and the neighbors are jealous!",
    name: "Jennifer Martinez",
    role: "Homeowner, St. Catharines",
    image: testimonial1Img,
    rating: 5
  },
  {
    quote: "We've used Reliable Landscaping for both our lawn care and snow removal for 3 years. Always on time, great communication, and excellent results. Highly recommend!",
    name: "David Thompson",
    role: "Property Manager, Niagara Falls",
    image: testimonial2Img,
    rating: 5
  },
  {
    quote: "The hardscaping work they did on our patio and walkway exceeded our expectations. Beautiful craftsmanship and completed on schedule. Worth every penny!",
    name: "Lisa Anderson",
    role: "Homeowner, Welland",
    image: testimonial3Img,
    rating: 5
  }
];
---

<section class="py-24 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <div class="inline-block px-4 py-2 mb-4 bg-green-100 text-green-800 text-sm font-semibold rounded-full">
        What Clients Say
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">
        Trusted by <span class="text-transparent bg-clip-text bg-gradient-to-r from-green-600 to-green-700">Niagara Homeowners</span>
      </h2>
      <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
        Don't just take our word for it. See what our satisfied clients have to say about our landscaping services.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all hover-lift border border-slate-100">
          <div class="flex items-center gap-1 mb-4">
            {[...Array(testimonial.rating)].map(() => (
              <Star className="w-5 h-5 text-yellow-400 fill-current" />
            ))}
          </div>

          <Quote className="w-10 h-10 text-green-200 mb-4" />

          <p class="text-slate-700 leading-relaxed mb-6 italic">
            "{testimonial.quote}"
          </p>

          <div class="flex items-center gap-4 pt-6 border-t border-slate-100">
            <Image
              src={testimonial.image}
              alt={testimonial.name}
              class="w-12 h-12 rounded-full object-cover ring-2 ring-green-200"
              width={48}
              height={48}
            />
            <div>
              <div class="font-semibold text-slate-900">{testimonial.name}</div>
              <div class="text-sm text-slate-500">{testimonial.role}</div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <a
        href="https://g.page/r/YOUR_GOOGLE_BUSINESS_ID"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-green-600 hover:text-green-700 font-semibold transition-colors"
      >
        <Star className="w-5 h-5 fill-current" />
        Read More Reviews on Google
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>
  </div>
</section>
