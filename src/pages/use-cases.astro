---
import BaseLayout from '@layouts/BaseLayout.astro';
import Section from '@components/ui/Section.astro';
import Card from '@components/ui/Card.astro';
import Button from '@components/ui/Button.astro';
import TestimonialCard from '@components/ui/TestimonialCard.astro';
import { Image } from 'astro:assets';
import { Leaf, Hammer2, Fence, Home, Sprout } from 'lucide-react';

import landscapingImg from '@assets/202673963581995355.jpg';
import hardscapingImg from '@assets/1835039404882360347.jpg';
import fencingImg from '@assets/5012438065421274037.jpg';
import privacyFenceImg from '@assets/7940613081156595717.jpg';

import testimonial1Img from '@assets/1835039404882360347.jpg';
import testimonial2Img from '@assets/202673963581995355.jpg';
import testimonial3Img from '@assets/7940613081156595717.jpg';

import heroBgImg from '@assets/1835039404882360347.jpg';
import ctaBgImg from '@assets/7940613081156595717.jpg';

const projects:any[] = [
  {
    title: 'General Landscaping & Lawn Care',
    iconName: 'Leaf',
    image: landscapingImg,
    description: 'Complete lawn care, garden design, planting, and maintenance services to keep your property looking pristine year-round.',
    features: [
      'Professional lawn care and maintenance',
      'Garden design and planting',
      'Seasonal plantings and updates',
      'Tree and shrub care'
    ],
    testimonial: "The transformation is incredible! They took our tired lawn and overgrown beds and turned it into a beautiful, well-maintained landscape. The attention to detail is outstanding."
  },
  {
    title: 'Hardscaping & Property Development',
    iconName: 'Hammer2',
    image: hardscapingImg,
    description: 'Professional installation of patios, walkways, retaining walls, and outdoor living spaces with premium materials.',
    features: [
      'Patio installation and design',
      'Walkway construction',
      'Retaining wall installation',
      'Outdoor living space creation'
    ],
    testimonial: "From concept to completion, they delivered exactly what we envisioned. The patio looks amazing and has become our favorite place to entertain. Professional crew, great communication."
  },
  {
    title: 'Fencing & Privacy Solutions',
    iconName: 'Fence',
    image: fencingImg,
    description: 'Safe, attractive fence installations and repairs that enhance your property value and create privacy.',
    features: [
      'Fence installation and repairs',
      'Multiple material options',
      'Privacy fence solutions',
      'Post and gate work'
    ],
    testimonial: "They built a beautiful fence that not only looks great but provides the privacy we needed. The workmanship is excellent and they were so professional throughout the process."
  },
  {
    title: 'Privacy & Landscape Enhancement',
    iconName: 'Sprout',
    image: privacyFenceImg,
    description: 'Create privacy and beauty with combined fence and landscape design solutions that maximize your outdoor space.',
    features: [
      'Combined fence and landscaping design',
      'Tall privacy solutions',
      'Strategic plantings',
      'Year-round appeal'
    ],
    testimonial: "They perfectly combined fencing and landscaping to create the private oasis we wanted. The combination of the fence with mature plantings is exactly what we imagined."
  }
];
---

<BaseLayout title="Gallery - Our Landscaping Work">
  <!-- Hero Section -->
  <section class="relative h-[70vh] min-h-[500px] flex items-center overflow-hidden">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0">
      <Image
        src={heroBgImg}
        alt="Beautiful landscaping and outdoor transformations"
        class="w-full h-full object-cover"
        width={2070}
        height={1380}
      />
      <div class="absolute inset-0 bg-linear-to-r from-slate-900/95 via-green-900/85 to-slate-900/50"></div>
    </div>

    <!-- Content -->
    <div class="container mx-auto relative z-10 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center px-4 py-2 mb-6 bg-linear-to-r from-green-600 to-emerald-600 text-white text-sm font-semibold rounded-full shadow-lg">
          <Leaf className="w-4 h-4 mr-2" />
          Our Portfolio
        </div>

        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight">
          Our <span class="text-transparent bg-clip-text bg-linear-to-r from-green-300 via-emerald-300 to-green-300">
            Gallery
          </span>
        </h1>

        <p class="text-xl md:text-2xl text-slate-200 mb-8 max-w-3xl mx-auto leading-relaxed">
          Explore beautiful transformations we've completed across Niagara and the GTA.
          See how we turn outdoor spaces into stunning landscapes.
        </p>
      </div>
    </div>
  </section>

  <!-- Portfolio Projects Grid -->
  <Section background="gray">
    <div class="text-center mb-16">
      <div class="inline-block px-4 py-2 mb-4 bg-green-100 text-green-800 text-sm font-semibold rounded-full">
        Our Services
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Professional <span class="gradient-text">Landscaping Services</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        From lawn care to hardscaping, fencing to complete property transformations, we deliver quality workmanship and exceptional service.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      {projects.map((project, index) => (
        <Card hover class="overflow-hidden group animate-fadeInUp" style={`animation-delay: ${index * 0.1}s`}>
          <!-- Project Image -->
          <div class="relative h-64 overflow-hidden">
            <Image
              src={project.image}
              alt={project.title}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              width={800}
              height={600}
            />
            <div class="absolute inset-0 bg-linear-to-t from-gray-900/80 via-gray-900/40 to-transparent"></div>
            <div class="absolute top-4 right-4">
              <div class="w-12 h-12 rounded-full bg-green-600 flex items-center justify-center text-white">
                {project.iconName === 'Leaf' && <Leaf className="w-6 h-6" />}
                {project.iconName === 'Hammer2' && <Hammer2 className="w-6 h-6" />}
                {project.iconName === 'Fence' && <Fence className="w-6 h-6" />}
                {project.iconName === 'Sprout' && <Sprout className="w-6 h-6" />}
              </div>
            </div>
            <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
              <h3 class="text-2xl font-bold">{project.title}</h3>
            </div>
          </div>

          <div class="p-6 space-y-4">
            <p class="text-gray-600 text-sm leading-relaxed">{project.description}</p>

            <!-- Features -->
            <div>
              <h4 class="text-sm font-semibold text-gray-700 uppercase mb-3 tracking-wide flex items-center gap-2">
                <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                What's Included
              </h4>
              <ul class="grid grid-cols-1 gap-2">
                {project.features.map((feature) => (
                  <li class="flex items-start space-x-2.5 text-sm">
                    <svg class="w-4 h-4 text-green-500 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span class="text-gray-600">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>

            <!-- Testimonial -->
            <div class="border-t border-gray-200 pt-4">
              <p class="text-sm text-gray-700 italic">"{project.testimonial}"</p>
            </div>
          </div>
        </Card>
      ))}
    </div>
  </Section>

  <!-- Why Choose Us -->
  <Section background="white">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Why Choose <span class="gradient-text">Reliable Landscaping</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        With over a decade of experience serving Niagara and the GTA, we bring expertise, reliability, and a passion for outdoor beauty.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <Card class="text-center">
        <div class="w-12 h-12 mx-auto mb-4 rounded-lg bg-green-100 flex items-center justify-center">
          <Leaf className="w-6 h-6 text-green-600" />
        </div>
        <h3 class="text-lg font-bold text-gray-900 mb-2">Expert Knowledge</h3>
        <p class="text-gray-600 text-sm">Certified professionals with deep expertise in landscaping, hardscaping, and design.</p>
      </Card>

      <Card class="text-center">
        <div class="w-12 h-12 mx-auto mb-4 rounded-lg bg-green-100 flex items-center justify-center">
          <Home className="w-6 h-6 text-green-600" />
        </div>
        <h3 class="text-lg font-bold text-gray-900 mb-2">Complete Solutions</h3>
        <p class="text-gray-600 text-sm">From lawn care to hardscaping to fencing, we handle all your outdoor needs.</p>
      </Card>

      <Card class="text-center">
        <div class="w-12 h-12 mx-auto mb-4 rounded-lg bg-green-100 flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="text-lg font-bold text-gray-900 mb-2">Quality Assured</h3>
        <p class="text-gray-600 text-sm">Meticulous attention to detail and commitment to excellence on every project.</p>
      </Card>

      <Card class="text-center">
        <div class="w-12 h-12 mx-auto mb-4 rounded-lg bg-green-100 flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
        <h3 class="text-lg font-bold text-gray-900 mb-2">Trusted Team</h3>
        <p class="text-gray-600 text-sm">Licensed, insured, and trusted by hundreds of satisfied homeowners in the region.</p>
      </Card>
    </div>
  </Section>

  <!-- CTA Section -->
  <section class="relative py-32 overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <Image
        src={ctaBgImg}
        alt="Ready to transform your outdoor space"
        class="w-full h-full object-cover"
        width={2070}
        height={1380}
      />
      <div class="absolute inset-0 bg-linear-to-r from-green-900/95 to-green-800/95"></div>
    </div>

    <!-- Content -->
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="max-w-4xl mx-auto text-center text-white">
        <div class="inline-block px-4 py-2 mb-6 bg-white/10 backdrop-blur-sm text-white text-sm font-semibold rounded-full">
          Get Started Today
        </div>
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
          Ready to Transform Your <span class="text-transparent bg-clip-text bg-linear-to-r from-green-300 to-emerald-300">Outdoor Space</span>?
        </h2>
        <p class="text-xl md:text-2xl text-slate-200 mb-12 max-w-2xl mx-auto leading-relaxed">
          Get a free, no-obligation quote today. Let us help you create the perfect outdoor space for your home.
        </p>

        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <Button href="/rfq" size="lg" class="bg-green-600! hover:bg-green-700! text-white! shadow-2xl!">
            Get Free Quote
          </Button>
          <Button href="/capabilities" size="lg" variant="outline" class="border-2! border-white! text-white! hover:bg-white/10! shadow-2xl!">
            View Services
          </Button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

